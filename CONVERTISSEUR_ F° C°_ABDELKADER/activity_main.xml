<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/input_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez la tempÃ©rature"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/btn_celsius_to_fahrenheit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convertir en Fahrenheit"/>

    <Button
        android:id="@+id/btn_fahrenheit_to_celsius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convertir en Celsius"/>

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"/>

</LinearLayout>
